<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.keiis.hanjul.admin.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fe5e00">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내정보"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/menu"
                    android:backgroundTint="@color/colorWhite"
                    />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대회선택"
            android:textSize="20dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Spinner>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*대회중/후"
        />

    <Button
        android:id="@+id/btn_record_situation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="기록 상황판"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*대회전"
        />
    
    <Button
        android:id="@+id/btn_dividend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="단체별 배번 관리"
        android:layout_margin="5dp"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        />
    
    <Button
        android:id="@+id/btn_deadline"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="마감일시 관리"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마감일시 : 2016.11.10 15:00"
        />

    <Button
        android:id="@+id/btn_judgement_sign"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="심판 승인"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />
    
    <Button
        android:id="@+id/btn_participation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="참가 현황판"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대회 상황판"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단체별 배번 관리"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마감일시 관리"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심판승인"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참가 현황판"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
