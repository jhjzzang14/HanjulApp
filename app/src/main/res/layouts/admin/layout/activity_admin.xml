<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.keiis.hanjul.admin.AdminActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"></include>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대회선택"
            android:textSize="20dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Spinner>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*대회중/후"
        />

    <Button
        android:id="@+id/btn_record_situation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="기록 상황판"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />
    
    <Button
        android:id="@+id/btn_competition_management"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="대회기록 조회"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*대회전"
        />
    
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="단체별 배번 관리"
        android:layout_margin="5dp"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        />
    
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="마감일시 관리"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마감일시 : 2016.11.10 15:00"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="심판 승인"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />
    
    <Button
        android:id="@+id/btn_participation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="참가 현황판"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        />


</LinearLayout>
