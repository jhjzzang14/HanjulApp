<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- ===================================================== -->
            <!-- 단체명 -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_orgnName"
                    android:layout_width="@dimen/user_tv_width"
                    android:layout_height="wrap_content"
                    android:text="@string/orgnNameE"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/user_tv_font_size" />

                <EditText
                    android:id="@+id/et_orgnName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size"
                    tools:text="Login ID" />
            </LinearLayout>

            <!-- ===================================================== -->
            <!-- 상장인쇄명 -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_prntOrgnName"
                    android:layout_width="@dimen/user_tv_width"
                    android:layout_height="wrap_content"
                    android:text="@string/prntOrgnNameE"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/user_tv_font_size" />

                <EditText
                    android:id="@+id/et_prntOrgnName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size"
                    tools:text="Password" />
            </LinearLayout>

            <!-- ===================================================== -->
            <!-- SUB ID -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subLoginId"
                    android:layout_width="@dimen/user_tv_width"
                    android:layout_height="wrap_content"
                    android:text="@string/subLoginId"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/user_tv_font_size" />

                <EditText
                    android:id="@+id/et_subLoginId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size" />
            </LinearLayout>

            <!-- ===================================================== -->
            <!-- SUB PW -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subLoginPw"
                    android:layout_width="@dimen/user_tv_width"
                    android:layout_height="wrap_content"
                    android:text="@string/subLoginPwE"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/user_tv_font_size" />

                <EditText
                    android:id="@+id/et_subLoginPw"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size" />

                <EditText
                    android:id="@+id/et_subLoginPwConfirm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size" />
            </LinearLayout>

            <!-- ===================================================== -->
            <!-- EMAIL -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="@dimen/user_tv_width"
                    android:layout_height="wrap_content"
                    android:text="@string/emailE"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/user_tv_font_size" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size" />
            </LinearLayout>

            <!-- ===================================================== -->
            <!-- 주소 -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="@dimen/user_tv_width"
                    android:layout_height="wrap_content"
                    android:text="@string/addr"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/user_tv_font_size" />

                <EditText
                    android:id="@+id/et_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_border"
                    android:padding="5dp"
                    android:textSize="@dimen/et_font_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>