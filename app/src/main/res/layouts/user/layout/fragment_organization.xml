<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ===================================================== -->
    <!-- 단체명 -->
    <!-- ===================================================== -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/tv_orgnName"
            android:text="@string/orgnNameE"
            android:textSize="@dimen/user_tv_font_size"
            android:layout_width="@dimen/user_tv_width"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor"
            />

        <EditText
            android:id="@+id/et_orgnName"
            android:textSize="@dimen/et_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Login ID"
            android:padding="5dp"
            android:background="@color/colorWhite"
            android:layout_marginRight="40dp"
            />
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- 상장인쇄명 -->
    <!-- ===================================================== -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/tv_prntOrgnName"
            android:text="@string/prntOrgnNameE"
            android:textSize="@dimen/user_tv_font_size"
            android:layout_width="@dimen/user_tv_width"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor"
            />

        <EditText
            android:id="@+id/et_prntOrgnName"
            android:padding="5dp"
            tools:text="Password"
            android:textSize="@dimen/et_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/colorWhite"
            />
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- SUB ID -->
    <!-- ===================================================== -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/tv_subLoginId"
            android:text="@string/subLoginId"
            android:textSize="@dimen/user_tv_font_size"
            android:layout_width="@dimen/user_tv_width"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor" />

        <EditText
            android:id="@+id/et_subLoginId"
            android:padding="5dp"
            android:textSize="@dimen/et_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/colorWhite"
            />
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- SUB PW -->
    <!-- ===================================================== -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/tv_subLoginPw"
            android:text="@string/subLoginPwE"
            android:textSize="@dimen/user_tv_font_size"
            android:layout_width="@dimen/user_tv_width"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor" />

        <EditText
            android:id="@+id/et_subLoginPw"
            android:padding="5dp"
            android:textSize="@dimen/et_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/colorWhite"
            />
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- EMAIL -->
    <!-- ===================================================== -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/tv_email"
            android:text="@string/emailE"
            android:textSize="@dimen/user_tv_font_size"
            android:layout_width="@dimen/user_tv_width"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor"/>

        <EditText
            android:id="@+id/et_email"
            android:padding="5dp"
            android:textSize="@dimen/et_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/colorWhite"
            />
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- 주소 -->
    <!-- ===================================================== -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/tv_addr"
            android:text="@string/addr"
            android:textSize="@dimen/user_tv_font_size"
            android:layout_width="@dimen/user_tv_width"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColor"/>

        <EditText
            android:id="@+id/et_addr"
            android:padding="5dp"
            android:textSize="@dimen/et_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/colorWhite"
            />
    </LinearLayout>
</LinearLayout>