<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/userAppbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/userToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height"
            android:background="@color/mainColor" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2">
            <!-- ===================================================== -->
            <!-- 회원 기본정보 -->
            <!-- ===================================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!-- ===================================================== -->
                <!-- id,닫기,저장 -->
                <!-- ===================================================== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="@dimen/user_tv_width"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loginIdE"
                            android:textColor="@color/mainColor"
                            android:textSize="@dimen/user_tv_font_size" />

                        <EditText
                            android:id="@+id/et_loginId"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:layout_toRightOf="@+id/tv_id"
                            android:background="@drawable/et_border"
                            android:hint="영문자.특수문자.숫자"
                            android:inputType="text"
                            android:padding="5dp"
                            android:textSize="@dimen/et_font_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:baselineAligned="false"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_save"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/save" />

                            <Button
                                android:id="@+id/btn_cancel"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/cancel" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <!-- ===================================================== -->
                <!-- pw -->
                <!-- ===================================================== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/tv_pw"
                            android:layout_width="@dimen/user_tv_width"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loginPwE"
                            android:textColor="@color/mainColor"
                            android:textSize="@dimen/user_tv_font_size" />

                        <EditText
                            android:id="@+id/et_loginPw"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:layout_toRightOf="@+id/tv_pw"
                            android:background="@drawable/et_border"
                            android:hint="비밀번호 입력"
                            android:inputType="textPassword"
                            android:padding="5dp"
                            android:textSize="@dimen/et_font_size" />

                        <EditText
                            android:id="@+id/btn_confirm"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/et_loginPw"
                            android:background="@drawable/et_border"
                            android:hint="재확인"
                            android:inputType="textPassword"
                            android:padding="5dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- ===================================================== -->
                <!-- 성명 -->
                <!-- ===================================================== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="@dimen/user_tv_width"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/nameE"
                            android:textColor="@color/mainColor"
                            android:textSize="@dimen/user_tv_font_size" />

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:layout_toRightOf="@+id/tv_name"
                            android:background="@drawable/et_border"
                            android:inputType="text"
                            android:padding="5dp"
                            android:textSize="@dimen/et_font_size" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- ===================================================== -->
                <!-- 핸드폰 -->
                <!-- ===================================================== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <EditText
                            android:id="@+id/et_handPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:layout_toRightOf="@+id/tv_handPhone"
                            android:background="@drawable/et_border"
                            android:inputType="phone"
                            android:padding="5dp"
                            android:textSize="@dimen/et_font_size" />

                        <TextView
                            android:id="@+id/tv_handPhone"
                            android:layout_width="@dimen/user_tv_width"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/handPhoneE"
                            android:textColor="@color/mainColor"
                            android:textSize="@dimen/user_tv_font_size" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
        <!-- ===================================================== -->
        <!-- Tab Bar -->
        <!-- ===================================================== -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <android.support.design.widget.TabLayout
                android:id="@+id/userTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e4dee4"
                app:tabIndicatorColor="@color/mainColor"
                app:tabSelectedTextColor="@color/mainColor"
                app:tabTextColor="#000000" />

            <android.support.v4.view.ViewPager
                android:id="@+id/userViewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/userTab" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>