<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등수종목*"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/sp_rank_subject"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"></Spinner>
        <Button
            android:id="@+id/btn_rank_grant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등수부여"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"/>
        <Button
            android:id="@+id/btn_rank_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등수취소"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대상종목*"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/sp_object_subject"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"></Spinner>
        <Button
            android:id="@+id/btn_object_grant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대상부여"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"/>
        <Button
            android:id="@+id/btn_object_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대상취소"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등급족목*"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/sp_rating_subject"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"></Spinner>
        <Button
            android:id="@+id/btn_rating_grant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등급부여"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"/>
        <Button
            android:id="@+id/btn_rating_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등급취소"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>