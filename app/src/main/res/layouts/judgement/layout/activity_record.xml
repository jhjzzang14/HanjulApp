<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rcorde"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.keiis.hanjul.judgement.RecordActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종목"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/subject_list"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/subject"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            ></Spinner>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="차수증가"
            android:layout_toRightOf="@id/subject_list"
            android:background="@color/colorWhite"
            android:layout_gravity="center_vertical"
            />

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ceced4"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록"
            android:textSize="16dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/et_record"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(이전기록:30) (차수:3)"
            android:textSize="16dp"
            android:layout_margin="5dp"
            />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_identity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="선수확인"
            android:background="@color/colorWhite"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_record_save"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="기록저장"
            android:background="@color/colorWhite"
            android:layout_margin="5dp"
            />
    </GridLayout>
</LinearLayout>
