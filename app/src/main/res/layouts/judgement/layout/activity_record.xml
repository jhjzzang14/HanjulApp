<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rcorde"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefe4"
    tools:context="com.keiis.hanjul.judgement.RecordActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종목"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            />

        <Spinner
            android:id="@+id/subject_list"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/subject"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            ></Spinner>

        <Button
            android:id="@+id/btn_degree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="차수증가"
            android:layout_toRightOf="@id/subject_list"
            android:background="@color/mainColor"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_final_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/subject_list"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ceced4"></View>

<!--    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>-->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선수 1,2"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/et_player_1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/et_border"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:enabled="false"
            android:minLines="3"
            android:maxLength="4"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/tv_player_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/et_player_2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/et_border"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="5dp"
            android:enabled="false"
            android:minLines="3"
            android:maxLength="4"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/tv_player_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선수 3,4"
            android:textSize="18dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/et_player_3"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/et_border"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:enabled="false"
            android:minLines="3"
            android:maxLength="4"
            android:inputType="number"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_player_3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/et_player_4"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/et_border"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:enabled="false"
            android:minLines="3"
            android:maxLength="4"
            android:gravity="center"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/tv_player_4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18dp"
            />
    </GridLayout>

    <Button
        android:id="@+id/btn_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배번확인"
        android:background="@color/mainColor"
        android:textColor="@color/colorWhite"
        android:elevation="1dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록"
            android:textSize="18dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/et_record"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/et_border"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="5dp"
            />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </GridLayout>

    <Button
        android:id="@+id/btn_record_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록저장"
        android:background="#ceced4"
        android:textColor="@color/colorWhite"
        android:enabled="false"
        android:elevation="1dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

</LinearLayout>
